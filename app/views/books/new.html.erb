<h1>New book</h1>

<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<% if f.object.errors.any? %>
  <div class="alert alert-warning">
  	<h3><%= pluralize(f.object.errors.count, "error") %> prohibited this obj from being saved:</h3>
    <ul>
      <% f.object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %>

<% end %>