<h1>Books</h1>
<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
	<%= link_to "Show", book_path(book.id) %>
	<%= link_to "Edit", edit_book_path(book.id) %>
<%= link_to "Destroy", book_path(book.id), method: :delete %>
</td>
</tr>
<% end %>
</tbody>
</table>

<h1>New book</h1>

<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<% if f.object.errors.any? %>
  <div class="alert alert-warning">
  	<h3><%= pluralize(f.object.errors.count, "error") %> prohibited this obj from being saved:</h3>
    <ul>
      <% f.object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %>

<% end %>




